<h1>Listing patients</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Last</th>
    <th>First</th>
    <th>Key</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.id %></td>
    <td><%= patient.last %></td>
    <td><%= patient.first %></td>
    <td><%= patient.key %></td>
    <td><%= localize(patient.created_at, :format => :long) %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Patient', new_patient_path, class: "button radius"%>
